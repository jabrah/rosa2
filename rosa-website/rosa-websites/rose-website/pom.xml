<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>rosa-websites</artifactId>
        <groupId>rosa.website</groupId>
        <version>2.0.1-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>rose-website</artifactId>
    <packaging>war</packaging>

    <properties>
        <!-- Directory of the archive to be used during the build -->
        <archive.path>/mnt/archive</archive.path>

	<!-- URL to FSI Server webapp -->
	<fsi.url>http://fsiserver.library.jhu.edu/</fsi.url>
		
        <!-- Property bind for buildnumber-maven-plugin, holds the current git commit hash -->
        <commitNumber>${buildNumber}</commitNumber>

        <!-- Collection name in the archive for this site -->
        <collection.name>rosecollection</collection.name>

        <!--
            These two properties define the target directory into which resources will be copied.
                - 'metadata.copy.path' : metadata from the archive will be copied to this location
                - 'build.search.index' : the search index for this webapp will be generated here
        -->
        <metadata.copy.path>${project.build.directory}/${project.build.finalName}/WEB-INF/archive</metadata.copy.path>
        <search.index.path>${project.build.directory}/${project.build.finalName}/WEB-INF/lucene</search.index.path>

        <!-- Build phase during which the search index will be generated -->
        <index.phase>generate-resources</index.phase>
        <!-- Build phase during which the  -->
        <copy.metadata.phase>generate-resources</copy.metadata.phase>

        <!--
            Properties for the webapp:
                - 'web.search.index' : location of the deployed search index
                - 'web.archive' : location of the copied metadata once deployed
        -->
        <web.prefix>webapps/rose/WEB-INF</web.prefix>
        <web.archive>${web.prefix}/archive</web.archive>
        <web.search.index>${web.prefix}/lucene</web.search.index>

        <!--
            Set a few GWT properties:
                - 'gwt.output.style' : style of generated JavaScript, default is 'obf' (obfuscated code).
                                        Set to 'PRETTY' for unobfuscated code
                - 'gwt.log.level' : should change the level at which logging messages are sent to the server (remote logging)
        -->
        <gwt.output.style>obf</gwt.output.style>
        <gwt.log.level>WARNING</gwt.log.level><!--The level of logging detail: ERROR, WARN, INFO, TRACE, DEBUG, SPAM, or ALL-->

        <!-- Google Analytics on or off -->
        <analytics.status>false</analytics.status>
    </properties>

    <profiles>
        <profile>
            <id>debug</id>

            <properties>
                <gwt.output.style>PRETTY</gwt.output.style>
                <gwt.log.level>INFO</gwt.log.level>
                <analytics.status>false</analytics.status>
            </properties>
        </profile>
    </profiles>

    <dependencies>

        <dependency>
            <groupId>com.google.inject</groupId>
            <artifactId>guice</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.gwt.inject</groupId>
            <artifactId>gin</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-servlet</artifactId>
            <scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Project dependencies -->

        <dependency>
            <groupId>rosa.archive</groupId>
            <artifactId>rosa-archive-model</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>rosa.archive</groupId>
            <artifactId>rosa-archive-tool</artifactId>
        </dependency>

        <dependency>
            <groupId>rosa.archive</groupId>
            <artifactId>rosa-archive-core</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>rosa.search</groupId>
            <artifactId>rosa-search-model</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>rosa.search</groupId>
            <artifactId>rosa-search-core</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>rosa.website</groupId>
            <artifactId>rosa-website-model</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>rosa.website</groupId>
            <artifactId>rosa-website-viewer</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>rosa.website</groupId>
            <artifactId>rosa-website-search</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>rosa.website</groupId>
            <artifactId>rosa-website-core</artifactId>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>rosa.website</groupId>
            <artifactId>rosa-fsi-js</artifactId>
            <classifier>sources</classifier>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>rosa.website</groupId>
            <artifactId>rosa-fsi-js</artifactId>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <outputDirectory>${project.build.directory}/${project.build.finalName}/WEB-INF/classes</outputDirectory>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                    <shortRevisionLength>7</shortRevisionLength>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>

                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                            <goal>test</goal>
                        </goals>
                    </execution>
                </executions>

                <configuration>
                    <style>${gwt.output.style}</style>
                    <runTarget>RosaWebsiteTest.html</runTarget>
                    <hostedWebapp>${project.build.directory}/${project.build.finalName}</hostedWebapp>
                    <modules>
                        <module>rosa.website.rose.RosaWebsiteRose</module>
                    </modules>
                    <copyWebapp>true</copyWebapp>
                    <compileSourcesArtifacts>
                        <compileSourcesArtifact>rosa.archive:rosa-archive-model</compileSourcesArtifact>
                        <compileSourcesArtifact>rosa.archive:rosa-archive-core</compileSourcesArtifact>
                        <compileSourcesArtifact>rosa.search:rosa-search-model</compileSourcesArtifact>
                        <compileSourcesArtifact>rosa.search:rosa-search-core</compileSourcesArtifact>
                        <compileSourcesArtifact>rosa.website:rosa-website-model</compileSourcesArtifact>
                        <compileSourcesArtifact>rosa.website:rosa-website-viewer</compileSourcesArtifact>
                        <compileSourcesArtifact>rosa.website:rosa-website-search</compileSourcesArtifact>
                        <compileSourcesArtifact>rosa.website:rosa-fsi-js</compileSourcesArtifact>
                        <compileSourcesArtifact>rosa.website:rosa-website-core</compileSourcesArtifact>
                    </compileSourcesArtifacts>
                </configuration>
            </plugin>

            <!-- Maven war plugin : to provide resource filtering on web.xml -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>

                <configuration>
                    <webResources>
                        <resource>
                            <filtering>true</filtering>
                            <directory>src/main/webapp</directory>
                            <includes>
                              <include>**/web.xml</include>
			      <include>**/*.html</include>			      
                            </includes>
                        </resource>
                    </webResources>
                    <warSourceDirectory>src/main/webapp</warSourceDirectory>
                    <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
                </configuration>
            </plugin>

            <!-- Exec plugin to run CLI tools -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <!-- Copy archive contents into WAR -->
                    <execution>
                        <id>copy-archive-data</id>
                        <phase>${copy.metadata.phase}</phase>

                        <configuration>
                            <mainClass>rosa.archive.tool.CopyArchiveTool</mainClass>
                            <arguments>
                                <!--<argument>-collection</argument>-->
                                <argument>${metadata.copy.path}</argument>
                                <argument>${collection.name}</argument>
                            </arguments>

                            <systemProperties>
                                <systemProperty>
                                    <key>archive.path</key>
                                    <value>${archive.path}</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>

                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>

                    <!-- Generate search index -->
                    <execution>
                        <id>create-lucene-index</id>
                        <phase>${index.phase}</phase>

                        <configuration>
                            <mainClass>rosa.website.core.server.IndexToolMain</mainClass>
                            <arguments>
                                <argument>${collection.name}</argument>
                            </arguments>
                            <systemProperties>
                                <systemProperty>
                                    <key>archive.path</key>
                                    <value>${metadata.copy.path}</value>
                                </systemProperty>
                                <systemProperty>
                                    <key>search.index.path</key>
                                    <value>${search.index.path}</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>

                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

</project>
